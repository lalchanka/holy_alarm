<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.HolyAlarm" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:timePickerStyle">@style/Dialog.Theme</item>
    </style>


    <style name="Dialog.Theme" parent="Theme.HolyAlarm">
        <!-- BackgroundColor of the date modal -->
        <item name="android:background">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:numbersSelectorColor">@color/accent</item>
        <item name="android:textColor">@color/accent</item>

        <item name="android:numbersTextColor">@color/black</item>
        <!-- Change textColor of the date modal -->
        <item name="android:textColorPrimary">@color/primary</item>
    </style>
</resources>